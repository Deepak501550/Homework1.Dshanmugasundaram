import random
import matplotlib.pyplot as plt

def random_walk(n):
  """
  Performs a 1D random walk with n timepoints.

  Args:
    n: The number of timepoints.

  Returns:
    A list of the positions of the object at each timepoint.
  """

  positions = []
  for i in range(n):
    position = positions[-1] if positions else 0
    step = random.choice([-1, 1])
    positions.append(position + step)

  return positions

if __name__ == "__main__":
  positions = random_walk(100)
  plt.plot(positions)
  plt.xlabel("Time")
  plt.ylabel("Position")
  plt.show()
